@model IEnumerable<Video>
@{
    ViewData["Title"] = "Home Page";
}

<h1>All Videos</h1>
<p>Total : @Model.Count() Videos</p>

<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Create">
        Create New Video
    </a>
</div>

<div class="panel panel-primary">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Length</th>
                        <th>Category</th>
                        <th>Format</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Title</td>
                            <td>@p.Length</td>
                            <td>@p.Category</td>
                            <td>@p.Format</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>